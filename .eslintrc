      "camelcase": 0, // Objeto literal em bloco
      "comma-spacing": 2, // Obriga o espaÃƒÂ§o depois da virgula
      "sort-keys": 0,
      "object-shorthand": 0,
      "prefer-template": 0,
      "no-array-constructor": 0,
      "keyword-spacing": 2,
      "comma-dangle": 0,
      "strict": 1,
      "newline-after-var": 2, // Obriga uma nova linha depois da ultima declaraÃƒÂ§ÃƒÂ£o var
      "newline-before-return": 0,
      "newline-per-chained-call": 0,
      "object-property-newline": 2,
      "object-curly-newline": 1,
      "dot-location": 0,
      "key-spacing": [
        2,
        {
          "beforeColon": false,
          "afterColon": true
        }
      ]
    }
  }
